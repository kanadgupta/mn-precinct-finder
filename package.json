{
  "type": "module",
  "private": true,
  "engines": {
    "node": "^20"
  },
  "scripts": {
    "build": "tsc",
    "deno": "deno run -q -A --unstable bin/postprocess.js src/lib/data/precinct-table.xlsx",
    "dev": "tsx watch --inspect --env-file=.env src/node-server.ts",
    "lint": "npm run lint:ts && prettier -c . && tsc --noEmit && tsc -p __test__ && knip",
    "lint:ts": "biome check --error-on-warnings",
    "prebuild": "rm -rf dist",
    "pretest": "npm run lint",
    "start": "node dist/node-server.js",
    "test": "vitest"
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.2.5",
    "@hono/node-server": "^1.13.7",
    "@turf/boolean-within": "^7.2.0",
    "@turf/helpers": "^7.2.0",
    "hono": "^4.6.16",
    "ua-parser-js": "^2.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@readme/standards": "^2.1.1",
    "@types/geojson": "^7946.0.15",
    "@types/node": "^24.3.0",
    "knip": "^5.47.0",
    "nock": "^14.0.3",
    "prettier": "^3.5.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.1.1"
  },
  "prettier": "@readme/standards/prettier"
}
